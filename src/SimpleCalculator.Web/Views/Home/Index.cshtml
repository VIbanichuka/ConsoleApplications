@model CalculationPageModel

<h2>Simple Calculator</h2>

<form method="post">
    <div asp-validation-summary="ModelOnly"></div>

    <label asp-for="Input.FirstNumber"></label>
    <input type="number" asp-for="Input.FirstNumber" /> <br />
    <span asp-validation-for="Input.FirstNumber" class="text-danger"></span><br />

    <label asp-for="Input.SecondNumber"></label>
    <input type="number" asp-for="Input.SecondNumber" /> <br />
    <span asp-validation-for="Input.SecondNumber" class="text-danger"></span><br />

    <p>
        <label asp-for="Input.Result"></label>
        <span asp-for="Input.Result">@Model?.Input.Result</span>
    </p>

    <button type="submit" class="btn btn-primary" asp-controller="Home" asp-action="Add">+</button>
    <button type="submit" class="btn btn-primary" asp-controller="Home" asp-action="Subtract">-</button>
    <button type="submit" class="btn btn-primary" asp-controller="Home" asp-action="Multiply">*</button>
    <button type="submit" class="btn btn-primary" asp-controller="Home" asp-action="Divide">/</button>
    <button type="submit" class="btn btn-danger" asp-controller="Home" asp-action="Index">C</button>
</form>

<p>
@{
    Html.RenderPartial("_CalculationResults", Model?.Result);
}
<p>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}