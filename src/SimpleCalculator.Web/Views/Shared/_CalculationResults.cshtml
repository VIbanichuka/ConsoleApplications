@model List<CalculationEntityModel>

<h3>Calculation Results</h3>

<hr />

<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Math Operator
            </th>
            <th>
                First Number
            </th>
            <th>
                Second Number
            </th>
            <th>
                Result
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var entity in Model)
            {
                <tr>
                    <td>
                        @entity.Id
                    </td>
                    <td>
                        @entity.MathOperator
                    </td>
                    <td>
                        @entity.FirstNumber
                    </td>
                    <td>
                        @entity.SecondNumber
                    </td>
                    <td>
                        @entity.Result
                    </td>
                </tr>
            }
        }
    </tbody>
</table>